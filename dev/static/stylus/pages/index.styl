.persons-row
    margin-bottom: 60px

    @media $desktop
        margin-bottom: 110px

    &__list
        display: grid
        grid-template-columns 100%
        grid-row-gap: 32px
        max-width: 303px
        margin: 0 auto 32px

        @media $tablet
            max-width: 627px
            margin-bottom: 44px
            grid-template-columns 1fr 1fr
            grid-column-gap: 20px
            grid-row-gap: 52px

        @media $big_desktop
            max-width: 100%
            margin-bottom: 60px
            grid-template-columns: repeat(4, 1fr)
            grid-column-gap: 30px
            grid-row-gap: 38px

    &__more
        max-width: 960px
        margin: 0 auto




.qna
    margin-top: -16px
    font-family: $montserrat

    @media $tablet
        position: relative
        margin-top: 0

    &__show-more
        margin-bottom: 40px

        font-size: 16px
        line-height: 19px
        font-weight: 400

        @media $tablet
            position: absolute
            right: 0
            top: -64px
            margin-bottom: 0

        @media $desktop
            top: -90px

    &__item
        margin-bottom: 16px

        font-weight: 500
        font-size: 16px
        line-height: 25px

        @media $tablet
            margin-bottom: 20px

        &:last-child
            margin-bottom: 0

        &_opened
            display: block

            .qna
                &__toggler

                    &::after
                        transform: translate(-50%, -50%) rotate(90deg)

                &__answer
                    display: block



    &__question
        position: relative
        padding: 41px 75px 41px 18px
        border-radius: 5px
        background-color: $gray2
        cursor: pointer

        @media $tablet
            padding: 52px 96px 52px 18px

    &__toggler
        position: absolute
        right: 18px
        top: 50%
        transform: translateY(-50%)
        width: 46px
        height: 46px
        border-radius: 50%
        border: 1px solid #828282
        cursor: pointer

        &::after, &::before
            content: ''
            display: block
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            background-color: #c4c4c4

        &::after
            width: 2px
            height: 16px
            transition: .3s transform ease

        &::before
            width: 16px
            height: 2px

    &__answer
        display: none
        padding: 14px 6px 14px 18px
        margin-top: 8px
        margin-bottom: 1px
        border: 1px solid #1D1D1D
        border-radius: 5px

        @media $tablet
            margin-bottom: 0
            margin-top: 20px

        @media $desktop
            margin-top: 8px
            padding: 26px 51px


    &__answer-wrap

        @media $desktop
            min-height: 50px
            display: flex
            align-items: center

.hello
    height: calc(100vh - 115px)
    position: relative
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column

    font-family: $montserrat
    text-align: center
    color: $white

    @media $tablet
        max-height: 668px

    @media $desktop
        max-height: 774px

    &__video
        display: none

        @media $desktop
            display: block
            height: 100%

        &:empty
            display: none

            & + .hello__img
                display: block

        video
            width: 100%
            height: 100%


    &__bg
        height: 100%
        width: 100%
        position: absolute
        top: 0
        left: 0
        z-index: -1

    &__img
        height: 100%

        @media $desktop
            display: none

        img
            object-fit: cover
            object-position: center
            height: 100%
            width: 100%

    &__heading
        margin-bottom: 10px

        font-weight: 700
        font-size: 24px
        line-height: 38px

        @media $tablet
            margin-bottom: 8px

            font-size: 64px
            line-height: 103px

        @media $desktop
            margin-bottom: 10px

    &__subheading
        margin-bottom: 20px

        font-weight: 500
        font-size: 16px
        line-height: 25px

        @media $tablet
            font-size: 20px
            line-height: 32px

        @media $desktop
            margin-bottom: 30px

            font-size: 24px
            line-height: 39px

    &__btn
        width: 260px

