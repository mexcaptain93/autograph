.banner 
    position relative
    display block
    margin-bottom 60px

    @media $desktop
        margin-bottom 130px

    &__img 
        height 292px

        source, img
            width 100% 
            height: 100%
            object-fit: cover
            object-position: center

    &__text
        position absolute
        top 0 
        right 0
        bottom 0
        left 0
        display flex
        align-items center
        justify-content center

        font-size 16px
        line-height 26px
        color $white
        text-align center
        font-family $montserrat 

        @media $desktop
            font-size 48px
            line-height 77px
            font-weight 700
            color $green

.popular 
    margin-bottom 40px
    margin-right -16px

    @media $desktop
        margin-bottom: 110px
    
    &__list 
        display flex
        width 100%
        overflow-y auto
        padding-bottom: 20px

        @media $desktop
            justify-content space-between

        &:after 
            content: ''
            flex: 0 0 16px
        


    &__item 
        position relative
        display block
        width 275px
        flex-shrink 0
        margin-right 8px

        @media $tablet
            margin-right 20px

        @media $desktop
            margin-right 30px

        &:last-child
            margin-right 0px

    &__img
        border-radius: 5px
        overflow hidden

    &__name 
        position absolute
        top 0
        bottom 0
        right 0
        left 0
        display flex
        align-items center
        justify-content center

        font-size 24px
        line-height 30px
        color $white
        text-align center
        font-family $montserrat
        font-weight bold


.person
    display block
    width 303px

    @media $desktop
        width: 352px


    &:hover 

        .person__photo::after 
            opacity: 0

    &__photo
        position relative
        overflow hidden
        border-radius 5px
        

        &::after
            content ''
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            transition: .3s ease all
            opacity 1
            background: linear-gradient(180deg, rgba(0, 0, 0, 0) 26.2%, #000000 100%)

    &__name
        margin-bottom 14px

        font-family $montserrat
        font-weight 700
        font-size 16px
        line-height 20px
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

        @media $desktop
            margin-bottom: 19px

            font-size: 20px

    &__position
        margin-bottom 14px

        font-weight 300
        font-size 14px
        line-height 16px
        letter-spacing: -0.01em
        color $gray_light3
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

        @media $desktop
            margin-bottom: 13px

            font-size: 16px

    &__price
        display inline-block
        padding 4px 12px
        border: 1px solid #4F4F4F
        border-radius: 10px

        font-weight 700
        color $green2
        font-size 18px
        line-height 21px

.persons

    margin-bottom: 72px
    margin-right -16px

    @media $desktop
        margin-bottom: 110px

    &__list
        display: flex
        overflow-y: auto
        padding-bottom: 20px

        &:after
            content: ''
            flex: 0 0 16px

    &__item
        margin-right: 8px

        @media $tablet
            margin-right: 20px

        @media $desktop
            margin-right: 30px

        &:last-child
            margin-right: 0
