.qna
    margin-top: -16px
    font-family: $montserrat

    @media $tablet
        position: relative
        margin-top: 0

    &__show-more
        margin-bottom: 40px

        font-size: 16px
        line-height: 19px
        font-weight: 400

        @media $tablet
            position: absolute
            right: 0
            top: -64px
            margin-bottom: 0

        @media $desktop
            top: -90px

    &__item
        margin-bottom: 16px

        font-weight: 500
        font-size: 16px
        line-height: 25px

        @media $tablet
            margin-bottom: 20px

        &:last-child
            margin-bottom: 0

        &_opened
            display: block

            .qna
                &__toggler

                    &::after
                        transform: translate(-50%, -50%) rotate(90deg)

                &__answer
                    display: block



    &__question
        position: relative
        padding: 41px 75px 41px 18px
        border-radius: 5px
        background-color: $gray2
        cursor: pointer

        @media $tablet
            padding: 52px 96px 52px 18px

    &__toggler
        position: absolute
        right: 18px
        top: 50%
        transform: translateY(-50%)
        width: 46px
        height: 46px
        border-radius: 50%
        border: 1px solid #828282
        cursor: pointer

        &::after, &::before
            content: ''
            display: block
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            background-color: #c4c4c4

        &::after
            width: 2px
            height: 16px
            transition: .3s transform ease

        &::before
            width: 16px
            height: 2px

    &__answer
        display: none
        padding: 14px 6px 14px 18px
        margin-top: 8px
        margin-bottom: 1px
        border: 1px solid #1D1D1D
        border-radius: 5px

        @media $tablet
            margin-bottom: 0
            margin-top: 20px

        @media $desktop
            margin-top: 8px
            padding: 26px 51px


    &__answer-wrap

        @media $desktop
            min-height: 50px
            display: flex
            align-items: center




