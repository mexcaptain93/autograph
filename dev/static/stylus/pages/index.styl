.banner 
    position relative
    display block
    margin-bottom 60px

    @media $desktop
        margin-bottom 130px

    &__img 
        height 292px

        source, img
            width 100% 
            height: 100%
            object-fit: cover
            object-position: center

    &__text
        position absolute
        top 0 
        right 0
        bottom 0
        left 0
        display flex
        align-items center
        justify-content center

        font-size 16px
        line-height 26px
        color $white
        text-align center
        font-family $montserrat 

        @media $desktop
            font-size 48px
            line-height 77px
            font-weight 700
            color $green

.popular 
    margin-bottom 40px
    margin-right -16px

    @media $desktop
        margin-bottom: 110px
    
    &__list 
        display flex
        width 100%
        overflow-y auto
        padding-bottom: 20px

        @media $desktop
            justify-content space-between

        &:after 
            content: ''
            flex: 0 0 16px
        


    &__item 
        position relative
        display block
        width 275px
        flex-shrink 0
        margin-right 8px

        @media $tablet
            margin-right 20px

        @media $desktop
            margin-right 30px

        &:last-child
            margin-right 0px

    &__img
        border-radius: 5px
        overflow hidden

    &__name 
        position absolute
        top 0
        bottom 0
        right 0
        left 0
        display flex
        align-items center
        justify-content center

        font-size 24px
        line-height 30px
        color $white
        text-align center
        font-family $montserrat
        font-weight bold


.person
    display block
    width 303px

    @media $desktop
        width: 352px


    &:hover 

        .person__photo::after 
            opacity: 0

    &__photo
        position relative
        overflow hidden
        border-radius 5px
        

        &::after
            content ''
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            transition: .3s ease all
            opacity 1
            background: linear-gradient(180deg, rgba(0, 0, 0, 0) 26.2%, #000000 100%)

    &__name
        margin-bottom 14px

        font-family $montserrat
        font-weight 700
        font-size 16px
        line-height 20px
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

        @media $desktop
            margin-bottom: 19px

            font-size: 20px

    &__position
        margin-bottom 14px

        font-weight 300
        font-size 14px
        line-height 16px
        letter-spacing: -0.01em
        color $gray_light3
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

        @media $desktop
            margin-bottom: 13px

            font-size: 16px

    &__price
        display inline-block
        padding 4px 12px
        border: 1px solid #4F4F4F
        border-radius: 10px

        font-weight 700
        color $green2
        font-size 18px
        line-height 21px

.persons
    margin-bottom: 72px
    margin-right -16px

    @media $desktop
        margin-bottom: 110px

    &__list
        display: flex
        overflow-y: auto
        padding-bottom: 20px

        &:after
            content: ''
            flex: 0 0 16px

    &__item
        margin-right: 8px

        @media $tablet
            margin-right: 20px

        @media $desktop
            margin-right: 30px

        &:last-child
            margin-right: 0


.howto
    counter-reset: howto
    margin-bottom: 40px

    @media $tablet
        margin-bottom: 60px

    @media $desktop
        margin-bottom: 130px

    &__list
        display: flex
        overflow-y: auto
        padding-bottom: 20px
        
        @media $tablet
            width: 434px
            flex-wrap: wrap
            justify-content: space-between
            margin: 0 auto
            padding-bottom: 0
            overflow-y: unset

        @media $desktop
            flex-wrap: nowrap
            width: auto
            max-width: 1328px

        &:after
            content: ''
            flex: 0 0 16px

            @media $tablet
                content: none


    &__item
        width: 212px
        flex-shrink: 0
        margin-right: 10px

        font-family: $montserrat

        @media $tablet
            margin-right: 0
            margin-bottom: 40px

        @media $desktop
            width: 25%
            margin-bottom: 0

        &:last-child
            margin-right: 0

            @media $tablet
                margin-bottom: 0

            .howto

                &__digit

                    &::after
                        content: none

        &:nth-child(3)

            @media $tablet
                margin-bottom: 0

    &__digit
        counter-increment: howto
        position: relative
        width: 100%
        height: 128px
        display: flex
        align-items: center
        justify-content: center
        background-position: center center
        background-repeat: no-repeat
        background-size: contain
        margin: 0 auto 16px


        &::before
            content: counter(howto)

            font-weight: 500
            font-size: 36px

        &::after

            @media $desktop
                content: ''
                height: 1px
                background: $gray2
                position: absolute
                top: calc(50% - 1px)
                right: 0
                width: 100px
                left: calc(50% + 64px)
                display: block
                width: calc(100% - 128px)


    &__text
        font-weight: 400
        font-size: 16px
        line-height: 26px
        text-align: center

        @media $desktop
            max-width: 212px
            margin: 0 auto

.qna
    margin-top: -16px
    font-family: $montserrat

    @media $tablet
        position: relative
        margin-top: 0

    &__show-more
        margin-bottom: 40px

        font-size: 16px
        line-height: 19px
        font-weight: 400

        @media $tablet
            position: absolute
            right: 0
            top: -64px
            margin-bottom: 0

        @media $desktop
            top: -90px

    &__item
        margin-bottom: 16px

        font-weight: 500
        font-size: 16px
        line-height: 25px

        @media $tablet
            margin-bottom: 20px

        &:last-child
            margin-bottom: 0

        &_opened
            display: block

            .qna
                &__toggler

                    &::after
                        transform: translate(-50%, -50%) rotate(90deg)

                &__answer
                    display: block


    &__question
        position: relative
        padding: 41px 75px 41px 18px
        border-radius: 5px
        background-color: $gray2

        @media $tablet
            padding: 52px 96px 52px 18px

    &__toggler
        position: absolute
        right: 18px
        top: 50%
        transform: translateY(-50%)
        width: 46px
        height: 46px
        border-radius: 50%
        border: 1px solid #828282
        cursor: pointer

        &::after, &::before
            content: ''
            display: block
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            background-color: #c4c4c4

        &::after
            width: 2px
            height: 16px
            transition: .3s transform ease

        &::before
            width: 16px
            height: 2px

    &__answer
        display: none
        padding: 14px 6px 14px 18px
        margin-top: 8px
        margin-bottom: 1px
        border: 1px solid #1D1D1D
        border-radius: 5px

        @media $tablet
            margin-bottom: 0
            margin-top: 20px

        @media $desktop
            margin-top: 8px
            padding: 26px 51px





