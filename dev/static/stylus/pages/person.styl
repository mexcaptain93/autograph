.person-page

  &__top

    @media $desktop
      display: flex
      margin-bottom: 130px

  &__main-info

    @media $desktop
      width: 574px

  &__verified
    display: flex
    margin-bottom: 60px

    font-family: $montserrat
    font-size: 16px
    line-height: 25px
    font-weight: 500

    @media $tablet
      margin-bottom: 40px

    @media $desktop
      margin-bottom: 130px

    &::before
      content: ''
      width: 24px
      height: 24px
      background-image: url('../img/svg/sprite.svg#verified')
      background-repeat: no-repeat
      background-position: center center
      margin-right: 7px

  &__banner
    margin-bottom: 30px

  &__name
    margin-bottom: 4px

  &__position
    margin-bottom: 24px

    font-family: $montserrat
    font-size: 16px
    line-height: 19px
    color: #828282
    font-weight: 400

  &__description
    margin-bottom: 24px

    font-weight: 400
    font-size: 16px
    line-height: 25px
    color: #f2f2f2

  &__order
    margin-bottom: 60px

    @media $tablet
      margin-bottom: 40px

    @media $desktop
      margin-bottom: 0

  &__video
    position: relative
    aspect-ratio: 16 / 9
    overflow: hidden
    margin-bottom: 60px

    @media $desktop
      flex-grow: 1
      margin-left: 130px
      margin-bottom: 0

    iframe
      position: absolute
      top: 0
      left: 0
      bottom: 0
      right: 0
      width: 100%
      height: 100%

  &__info
    margin-bottom: 60px

    @media $desktop
      margin-bottom: 130px


    .heading
      margin-bottom: 30px

      @media $tablet
        margin-bottom: 40px

      @media $desktop
        margin-bottom: 60px

    .info

      &__list

        @media $tablet
          display: flex
          flex-wrap: wrap

        @media $desktop
          width: 900px
          margin: 0 auto

      &__item
        display: flex
        justify-content: space-between
        margin-bottom: 16px

        font-family: $montserrat
        font-size: 14px
        line-height: 24px

        @media $tablet
          width: 50%
          margin-bottom: 30px
          justify-content: flex-start

          font-size: 18px
          line-height: 28px

        @media $desktop
          font-size: 24px
          line-height: 38px



        &:last-child
          margin-bottom: 0

      &__param
        color: #dadada
        font-weight: 500

        @media $tablet
          margin-right: 16px

      &__value
        width: 100px

        color: $white
        font-weight: 700

        @media $desktop
          width: auto

  &__howto
    margin-bottom: 40px

    @media $tablet
      margin-bottom: 70px

    @media $desktop
      margin-bottom: 130px

  &__gallery
    margin-right: -16px
    margin-bottom: 60px

    @media $tablet
      margin-bottom: 70px

    @media $desktop
      margin-bottom: 130px

    .gallery

      &__item
        width: 240px
        margin-right: 30px

        @media $tablet
          width: 227px

        @media $desktop
          width: 480px

  &__form
    margin-bottom: 20px

    @media $tablet
      margin-bottom: 30px

    .heading
      margin-bottom: 30px

      @media $desktop
        margin-bottom: 60px

      &_sub

        @media $desktop
          margin-bottom: 30px

    .form

      &__list

        @media $tablet
          display: grid
          grid-gap: 20px
          grid-template-columns: 1fr 1fr


        @media $desktop
          grid-gap: 30px

      &__item

        @media $tablet
          margin-bottom: 0

      &__block
        margin-bottom: 30px

        @media $tablet
          margin-bottom: 40px

        @media $desktop
          width: 950px
          margin: 0 auto 60px

        &_wide
          margin-bottom: 20px

          @media $desktop
            margin-bottom: 30px

          .heading
            margin-bottom: 20px

            @media $desktop
              margin-bottom: 30px

          .input
            padding: 19px 14px
            margin-bottom: 20px

            font-size: 14px
            line-height: 16px
            font-family: $roboto

            @media $desktop
              margin-bottom: 30px
