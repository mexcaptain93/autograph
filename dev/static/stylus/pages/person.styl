.person-page

  .verified
    display: flex
    margin-bottom: 60px

    font-family: $montserrat
    font-size: 16px
    line-height: 25px
    font-weight: 500


    &::before
      content: ''
      width: 24px
      height: 24px
      background-image: url('../img/svg/sprite.svg#verified')
      background-repeat: no-repeat
      background-position: center center
      margin-right: 7px

  .banner
    margin-bottom: 30px

  .heading
    margin-bottom: 4px

  .position
    margin-bottom: 24px

    font-family: $montserrat
    font-size: 16px
    line-height: 19px
    color: #828282
    font-weight: 400

  .description
    margin-bottom: 24px

    font-weight: 400
    font-size: 16px
    line-height: 25px
    color: #f2f2f2

  .order
    margin-bottom: 60px

  .video
    position: relative
    aspect-ratio: 16 / 9
    overflow: hidden
    margin-bottom: 60px

    iframe
      position: absolute
      top: 0
      left: 0
      bottom: 0
      right: 0
      width: 100%
      height: 100%
