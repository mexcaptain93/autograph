.person-page

  &__top

    @media $desktop
      display: flex
      margin-bottom: 130px

  &__main-info

    @media $desktop
      width: 574px
      display: flex
      flex-direction: column

  &__verified
    display: flex
    margin-bottom: 60px

    font-family: $roboto
    font-size: 16px
    line-height: 25px
    font-weight: 500

    @media $tablet
      margin-bottom: 40px

    @media $desktop
      margin-bottom: 130px

    &::before
      content: ''
      width: 24px
      height: 24px
      background-image: url('../img/svg/sprite.svg#verified')
      background-repeat: no-repeat
      background-position: center center
      background-size: cover
      margin-right: 7px

  &__banner
    margin-bottom: 30px

  &__name
    margin-bottom: 4px

  &__position
    margin-bottom: 24px

    font-family: $roboto
    font-size: 16px
    line-height: 19px
    color: #828282
    font-weight: 400

  &__description
    margin-bottom: 24px

    font-weight: 400
    font-size: 16px
    line-height: 25px
    color: #f2f2f2

    @media $desktop
      flex-grow: 1

  &__order
    margin-bottom: 60px

    @media $tablet
      margin-bottom: 40px

    @media $desktop
      margin-bottom: 0
      max-width: 341px

  &__video

    @media $desktop
      flex-grow: 1

  &__video-wrap
    position: relative
    padding-top: 56.25%
    overflow: hidden
    margin-bottom: 60px
    border-radius: 5px

    @media $desktop
      flex-grow: 1
      margin-left: 130px
      padding-top: calc((100% - 130px)/(796 / 394))
      margin-bottom: 0

    img
      display: none
      z-index: 2
      cursor: pointer
      object-fit: cover

    iframe, img
      position: absolute
      top: 0
      left: 0
      bottom: 0
      right: 0
      width: 100%
      height: 100%

    &_stopped

      &::before
        content: ''
        z-index: 3
        display: block
        width: 93px
        height: 93px
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        background-image: url('../img/svg/sprite.svg#video-play-pause')
        background-repeat: no-repeat
        background-position: center center
        background-size: cover
        cursor: pointer

        @media $desktop
          width: 166px
          height: 166px

      img
        display: block

  &__info
    margin-bottom: 60px

    @media $desktop
      margin-bottom: 130px


    .heading
      margin-bottom: 30px

      @media $tablet
        margin-bottom: 40px

      @media $desktop
        margin-bottom: 60px

    .info

      &__list

        @media $tablet
          display: flex
          flex-wrap: wrap

        @media $desktop
          width: 900px
          margin: 0 auto

      &__item
        display: flex
        justify-content: space-between
        margin-bottom: 16px

        font-family: $roboto
        font-size: 14px
        line-height: 24px

        @media $tablet
          width: 50%
          margin-bottom: 30px
          justify-content: flex-start

          font-size: 18px
          line-height: 28px

        @media $desktop
          font-size: 24px
          line-height: 38px



        &:last-child
          margin-bottom: 0

      &__param
        color: #dadada
        font-weight: 500

        @media $tablet
          margin-right: 16px

      &__value
        width: 100px

        color: $white
        font-weight: 700

        @media $desktop
          width: auto

  &__howto
    margin-bottom: 40px

    @media $tablet
      margin-bottom: 70px

    @media $desktop
      margin-bottom: 130px

  &__gallery
    margin-right: -16px
    margin-bottom: 60px

    @media $tablet
      margin-bottom: 70px

    @media $desktop
      margin-bottom: 130px

    @media $big_desktop
      margin-right: -16px

    .gallery

      &__list
        display: flex
        width: 100%
        overflow-y: auto

        @media $tablet
          justify-content: center

        &::after
          content: ''
          flex: 0 0 16px

      &__item
        width: 240px
        margin-right: 30px
        flex-shrink: 0

        @media $tablet
          width: 227px

        @media $desktop
          width: 360px

        @media $big_desktop
          width: 440px

        &:last-child
          margin-right: 0

  &__form
    margin-bottom: 60px

    @media $tablet
      margin-bottom: 30px

    @media $desktop
      margin-bottom: 60px

    .heading
      margin-bottom: 30px

      @media $desktop
        margin-bottom: 60px

      &_sub

        @media $desktop
          margin-bottom: 30px

    .form

      &__list

        @media $tablet
          display: grid
          grid-gap: 20px
          grid-template-columns: 1fr 1fr


        @media $desktop
          grid-gap: 30px

      &__item

        @media $tablet
          margin-bottom: 0

      &__block
        margin-bottom: 30px

        @media $tablet
          margin-bottom: 40px

        @media $desktop
          width: 950px
          margin: 0 auto 60px

        &_wide
          margin-bottom: 20px

          @media $desktop
            margin-bottom: 30px

          .heading
            margin-bottom: 20px

            @media $desktop
              margin-bottom: 30px

          .input
            padding: 19px 14px
            margin-bottom: 20px

            font-size: 14px
            line-height: 16px
            font-family: $roboto

            @media $desktop
              margin-bottom: 30px
              text-align: center

      &__hint
        font-size: 12px
        line-height: 15px

        @media $desktop
          width: 615px
          margin: 0 auto

        a
          color: #1D87E4

        p
          margin-bottom: 15px

  &__tags
    margin-bottom: 52px

    @media $tablet
      margin-bottom: 22px

    .tags

      &__wrapper
        font-family: $roboto
        font-weight: 500

        @media $tablet
          width: 480px
          margin: 0 auto
          display: flex

        @media $desktop
          width: 700px

      &__heading
        margin-bottom: 16px

        font-size: 16px
        line-height: 26px
        color: #dadada

        @media $tablet
          margin-right: 10px

        @media $desktop
          margin-right: 16px

      &__list
        display: flex
        flex-wrap: wrap

      &__item
        margin-right: 8px
        padding: 4px 12px
        border: 1px solid #333333
        border-radius: 16px
        margin-bottom: 8px

        font-size: 12px
        line-height: 19px

        &:last-child
          margin-right: 0

.reviews
  font-family: $roboto

  .heading

    @media $desktop
      margin-bottom: 83px

  &__list
    margin-bottom: 16px

    @media $tablet
      margin-bottom: 35px

    @media $desktop
      width: 960px
      margin: 0 auto 35px
      max-height: 483px
      padding-right: 35px

  &__item
    margin-bottom: 35px

    &:last-child
      margin-bottom: 0

  &__top
    display: flex
    justify-content: space-between
    margin-bottom: 18px

  &__name
    font-weight: 700
    font-size: 18px
    line-height: 22px
    color: $white

  &__date
    font-size: 15px
    line-height: 22px
    font-weight: 400
    color: #828282

  &__text
    font-size: 15px
    line-height: 27px
    font-weight: 400

  &__btn

    @media $desktop
      width: 960px
      margin: 0 auto



