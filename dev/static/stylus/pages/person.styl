.person-page

  &__verified
    display: flex
    margin-bottom: 60px

    font-family: $montserrat
    font-size: 16px
    line-height: 25px
    font-weight: 500


    &::before
      content: ''
      width: 24px
      height: 24px
      background-image: url('../img/svg/sprite.svg#verified')
      background-repeat: no-repeat
      background-position: center center
      margin-right: 7px

  &__banner
    margin-bottom: 30px

  &__name
    margin-bottom: 4px

  &__position
    margin-bottom: 24px

    font-family: $montserrat
    font-size: 16px
    line-height: 19px
    color: #828282
    font-weight: 400

  &__description
    margin-bottom: 24px

    font-weight: 400
    font-size: 16px
    line-height: 25px
    color: #f2f2f2

  &__order
    margin-bottom: 60px

  &__video
    position: relative
    aspect-ratio: 16 / 9
    overflow: hidden
    margin-bottom: 60px

    iframe
      position: absolute
      top: 0
      left: 0
      bottom: 0
      right: 0
      width: 100%
      height: 100%

  &__info
    margin-bottom: 60px

    .heading
      margin-bottom: 30px

    .info

      &__item
        display: flex
        justify-content: space-between
        margin-bottom: 16px

        font-family: $montserrat
        font-size: 14px
        line-height: 24px

        &:last-child
          margin-bottom: 0

      &__param

        color: #dadada
        font-weight: 500

      &__value
        width: 100px

        color: $white
        font-weight: 700

  &__howto
    margin-bottom: 40px

  &__gallery
    margin-right: -16px
    margin-bottom: 60px

    .gallery

      &__item
        width: 240px
        margin-right: 30px

