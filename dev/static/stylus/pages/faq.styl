.faq-page

  &__wrap

    @media $desktop
      display: flex

  &__menu
    margin-bottom: 40px

    @media $desktop
      width: 278px
      padding-right: 50px
      margin-bottom: 0

  &__content

    @media $desktop
      max-width: 950px
      flex-grow: 1
      padding-left: 50px
      border-left: 1px solid #828282

    .heading_sub
      margin-bottom: 40px


  .menu
    border: 1px solid #434343
    border-radius: 5px

    font-family: $montserrat
    font-size: 16px
    line-height: 18px
    color: #979797
    font-weight: 500
    text-align: center

    &__list
      //display: none

    &__current
      padding: 19px 38px 20px 16px
      font-family: $roboto
      color: $white

    &__item
      padding: 19px 38px 20px 16px


      @media $desktop
        margin-bottom: 30px

      &:last-child
        margin-bottom: 0

      &_active
        color: $white

  .form

    &__list
      margin-bottom: 30px

      @media $tablet
        display: flex
        flex-wrap: wrap
        justify-content: space-between

    &__item

      @media $tablet
        width: calc(50% - 15px)
        margin-bottom: 30px

      &:last-child
        margin-bottom: 0

      &_wide

        @media $tablet
          width: 100%

    &__submit
      margin-bottom: 30px

    &__hint
      font-size: 12px
      line-height: 15px

      @media $desktop
        width: 615px
        margin: 0 auto

      a
        color: #1D87E4

      p
        margin-bottom: 15px