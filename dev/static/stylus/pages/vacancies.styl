.vacancies-page



  &__text
    margin-bottom: 30px

    font-family: $roboto
    font-size: 16px
    line-height: 22px
    font-weight: 400

    p
      margin-bottom: 8px

    a
      color: $green


  .vacancy
    margin-bottom: 30px

    font-family: $roboto

    @media $desktop
      margin-bottom: 20px

    &:last-child
      margin-bottom: 0

    &_opened
      display: block

      .vacancy
        &__toggler

          &::after
            transform: translate(-50%, -50%) rotate(90deg)

        &__descr
          display: block

    &__name
      @extend .qna__question

      font-size: 16px
      line-height: 22px
      font-weight: 700

    &__toggler
      @extend .qna__toggler

    &__descr
      @extend .qna__answer
      font-size: 16px
      line-height: 22px
      font-weight: 400


