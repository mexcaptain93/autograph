.persons

  &__list
    display: grid
    grid-template-columns: 1fr
    grid-row-gap: 30px
    justify-content: center
    min-width: 0
    min-height: 0

    @media $tablet
      grid-template-columns: 328px 328px
      grid-column-gap: 20px

    @media $desktop
      grid-template-columns: repeat(4, 1fr)
      grid-column-gap: 30px
      grid-row-gap: 60px

  &__item
    min-width: 0
    overflow: hidden


  .person-card
    max-width: 328px
    width: auto
    margin: 0 auto

    @media $desktop
      max-width: 352px


