.banner 
    position relative
    display block
    margin-bottom 60px

    @media $desktop
        margin-bottom 130px

    &__img 
        height 292px

        source, img
            width 100% 
            height: 100%
            object-fit: cover
            object-position: center

    &__text
        position absolute
        top 0 
        right 0
        bottom 0
        left 0
        display flex
        align-items center
        justify-content center

        font-size 16px
        line-height 26px
        color $white
        text-align center
        font-family $montserrat 

        @media $desktop
            font-size 48px
            line-height 77px
            font-weight bold
            color $green



