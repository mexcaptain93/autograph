@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	-webkit-text-size-adjust: none
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
	-moz-font-smoothing: antialiased
	-webkit-tap-highlight-color: transparent
	text-rendering: optimizeLegibility

	font-family $mainFont
	height 100%
	background-color $black
	color $white

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color inherit
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	max-width: 100%
	max-height 100%
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	min-height 100%

.content
	flex 1 0 auto

.container 
	padding-left 16px
	padding-right 16px

	@media $desktop
		max-width: 1532px
		margin-left auto
		margin-right auto

.scrollbar
	overflow-y: auto
	// For FF
	scrollbar-width thin
	scrollbar-height thin
	scrollbar-color $gray_light $gray3

	// For other
	&::-webkit-scrollbar
		width: 4px
		height: 4px

		&-track
			background $gray3

		&-thumb
			background: $gray_light


.slick-slide
	outline: none

// Компоненты
@import "components/components.styl"

//Модули
@import "modules/modules.styl"

