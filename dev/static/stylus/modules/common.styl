.social
  margin-bottom: 20px

  @media $tablet
    min-width: 204px
    margin-right: 30px
    margin-bottom: 0
    padding-top: 3px

  @media $desktop
    padding-top: 0

  &__list
    display: flex
    align-items: center

  &__item
    margin-right: 16px

    font-family: $roboto
    font-size: 14px
    line-height: 16px
    color: #979797

    &:last-child
      margin-right: 0

    &_vk

      &::before
        content: ''
        display: inline-block
        margin-right: 4px
        width: 21px
        height: 11px
        background-position center center
        background-size cover
        background-image url('../img/svg/sprite.svg#vk')

    &_instagram

      &::before
        content: ''
        display: inline-block
        position: relative
        top: 2px
        margin-right: 4px
        width: 14px
        height: 14px
        background-position center center
        background-size cover
        background-image url('../img/svg/sprite.svg#instagram')

.breadcrumbs
  margin-bottom: 30px

  font-family: $montserrat
  font-weight: 500
  font-size: 14px
  line-height: 17px
  color: #BDBDBD

  &__list
    display: flex
    flex-wrap: wrap

  &__item
    margin-right: 8px
    margin-bottom: 8px

    &::after
      content: ''
      display: inline-block
      width: 6px
      height: 6px
      background-image: url('../img/svg/sprite.svg#breadcrumbs_delimiter')
      background-repeat: no-repeat
      background-position: center center
      margin-left: 8px

    &:last-child
      color: #15D41D

      &::after
        display: none