.social
  margin-bottom: 20px

  @media $tablet
    min-width: 204px
    margin-right: 30px
    margin-bottom: 0
    padding-top: 3px

  @media $desktop
    padding-top: 0

  &__list
    display: flex
    align-items: center

  &__item
    margin-right: 16px

    font-family: $roboto
    font-size: 14px
    line-height: 16px
    color: #979797

    &:last-child
      margin-right: 0

    &_vk

      &::before
        content: ''
        display: inline-block
        margin-right: 4px
        width: 21px
        height: 11px
        background-position center center
        background-size cover
        background-image url('../img/svg/sprite.svg#vk')

    &_instagram

      &::before
        content: ''
        display: inline-block
        position: relative
        top: 2px
        margin-right: 4px
        width: 14px
        height: 14px
        background-position center center
        background-size cover
        background-image url('../img/svg/sprite.svg#instagram')

.breadcrumbs
  margin-bottom: 30px

  font-family: $montserrat
  font-weight: 500
  font-size: 14px
  line-height: 17px
  color: #BDBDBD

  &__list
    display: flex
    flex-wrap: wrap

  &__item
    margin-right: 8px
    margin-bottom: 8px

    &::after
      content: ''
      display: inline-block
      width: 6px
      height: 6px
      background-image: url('../img/svg/sprite.svg#breadcrumbs_delimiter')
      background-repeat: no-repeat
      background-position: center center
      margin-left: 8px

    &:last-child
      color: #15D41D

      &::after
        display: none

.person-card
  display block
  width 303px
  max-width: 100%
  outline: none

  @media $desktop
    width: 352px

  &:hover

    .person__photo::after
      opacity: 0

  &__photo
    position relative
    overflow hidden
    border-radius 5px


    &::after
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      transition: .3s ease all
      opacity 1
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 26.2%, #000000 100%)

  &__name
    margin-bottom 14px

    font-family $montserrat
    font-weight 700
    font-size 16px
    line-height 20px
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

    @media $desktop
      margin-bottom: 19px

      font-size: 20px

  &__position
    margin-bottom 14px

    font-weight 300
    font-size 14px
    line-height 16px
    letter-spacing: -0.01em
    color $gray_light3
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

    @media $desktop
      margin-bottom: 13px

      font-size: 16px

  &__price
    display inline-block
    padding 4px 12px
    border: 1px solid #4F4F4F
    border-radius: 10px

    font-weight 700
    color $green2
    font-size 18px
    line-height 21px
.howto
  counter-reset: howto
  margin-right: -16px

  &__list
    display: flex
    overflow-y: auto
    padding-bottom: 20px

    @media $tablet
      width: 434px
      flex-wrap: wrap
      justify-content: space-between
      margin: 0 auto
      padding-bottom: 0
      overflow-y: unset

    @media $desktop
      flex-wrap: nowrap
      width: auto
      max-width: 1328px

    &:after
      content: ''
      flex: 0 0 16px

      @media $tablet
        content: none


  &__item
    width: 212px
    flex-shrink: 0
    margin-right: 10px

    font-family: $montserrat

    @media $tablet
      margin-right: 0
      margin-bottom: 40px

    @media $desktop
      width: 25%
      margin-bottom: 0

    &:last-child
      margin-right: 0

      @media $tablet
        margin-bottom: 0

      .howto

        &__digit

          &::after
            content: none

    &:nth-child(3)

      @media $tablet
        margin-bottom: 0

  &__digit
    counter-increment: howto
    position: relative
    width: 100%
    height: 128px
    display: flex
    align-items: center
    justify-content: center
    background-position: center center
    background-repeat: no-repeat
    background-size: contain
    margin: 0 auto 16px


    &::before
      content: counter(howto)

      font-weight: 500
      font-size: 36px

    &::after

      @media $desktop
        content: ''
        height: 1px
        background: $gray2
        position: absolute
        top: calc(50% - 1px)
        right: 0
        width: 100px
        left: calc(50% + 64px)
        display: block
        width: calc(100% - 128px)


  &__text
    font-weight: 400
    font-size: 16px
    line-height: 26px
    text-align: center

    @media $desktop
      max-width: 212px
      margin: 0 auto
